#!/usr/bin/env zsh

# Custom Aliases
alias fut-login="saml2aws login --session-duration=43200 --role=arn:aws:iam::275145157824:role/trifork-platform --force --profile=futadmin"
alias ltail="less -r +F"
alias os-upgrade="sudo nala upgrade; sudo snap refresh; flatpak upgrade; brew upgrade"
alias deb-install="mv ~/Downloads/*.deb /tmp && _ nala install /tmp/*.deb && rm /tmp/*.deb"

# Workarounds for known issues
# https://gitlab.gnome.org/GNOME/gnome-settings-daemon/-/issues/687
alias powerrestart="systemctl restart --user org.gnome.SettingsDaemon.Power.target"

# Ovewriting default commands
alias meld="guiRun /usr/bin/meld $@"
alias nautilus="guiRun /usr/bin/nautilus $@"
alias apt="nala"
alias fd="fdfind"
alias cat="bat"

# Git
alias g="git"
alias gg="guiRun gitg --standalone $@"
alias gff="git fetch && git merge --ff-only"

# AI
alias oc="opencode"
